{
    "name": "tacticians-log-multilang",
    "private": true,
    "version": "1.0.0",
    "type": "module",
    "main": "electron/main.js",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "lint": "eslint .",
        "preview": "vite preview",
        "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && electron .\"",
        "electron:build": "vite build && electron-builder"
    },
    "build": {
        "appId": "com.ayberk.tacticianslog.multilang",
        "productName": "Tactician's Log",
        "artifactName": "TacticiansLog-Setup-${version}.${ext}",
        "directories": {
            "output": "dist-electron"
        },
        "compression": "maximum",
        "files": [
            "dist/**/*",
            "electron/**/*"
        ],
        "extraResources": [
            {
                "from": "public/data",
                "to": "data"
            }
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "public/icon.png"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true,
            "artifactName": "TacticiansLog-Setup-${version}.${ext}",
            "shortcutName": "Tactician's Log"
        }
    },
    "dependencies": {
        "@dnd-kit/core": "^6.3.1",
        "@dnd-kit/sortable": "^10.0.0",
        "@dnd-kit/utilities": "^3.2.2",
        "framer-motion": "^12.25.0",
        "i18next": "^25.7.4",
        "i18next-browser-languagedetector": "^8.2.0",
        "lucide-react": "^0.446.0",
        "react": "^18.3.1",
        "react-dom": "^18.3.1",
        "react-i18next": "^16.5.3"
    },
    "devDependencies": {
        "@vitejs/plugin-react": "^4.3.1",
        "autoprefixer": "^10.4.20",
        "concurrently": "^9.0.1",
        "electron": "^32.1.0",
        "electron-builder": "^24.13.3",
        "postcss": "^8.4.47",
        "tailwindcss": "^3.4.13",
        "vite": "^5.4.8",
        "wait-on": "^8.0.1"
    }
}
